<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.practice_3.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_productsFragment1"
            app:destination="@id/productsFragment1" />
        <action
            android:id="@+id/action_loginFragment_to_productsFragment2"
            app:destination="@id/productsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/productsFragment1"
        android:name="com.example.practice_3.ProductsFragment1"
        android:label="fragment_products1"
        tools:layout="@layout/fragment_products1" >
        <action
            android:id="@+id/action_productsFragment1_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/productsFragment2"
        android:name="com.example.practice_3.ProductsFragment2"
        android:label="fragment_products2"
        tools:layout="@layout/fragment_products2" >
        <action
            android:id="@+id/action_productsFragment2_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>